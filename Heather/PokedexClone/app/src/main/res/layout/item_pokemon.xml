<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_pokemon_pokeball_iv"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_pokeball"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_pokemon_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0001"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/item_pokemon_pokeball_iv"
        app:layout_constraintTop_toTopOf="@id/item_pokemon_pokeball_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_pokemon_pokeball_iv"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/item_pokemon_cv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/item_pokemon_pokeball_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/item_pokemon_image_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:padding="8dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_pokemon_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이상해씨"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/item_pokemon_cv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/item_pokemon_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/item_pokemon_dual_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/item_pokemon_primary_type_btn"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:layout_marginEnd="2dp"
                android:textSize="11sp"
                tools:text="풀"/>

            <Button
                android:id="@+id/item_pokemon_secondary_type_btn"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:layout_marginStart="2dp"
                android:textSize="11sp"
                android:visibility="gone"
                tools:text="독"/>

        </LinearLayout>

        <Button
            android:id="@+id/item_pokemon_single_type_btn"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:text="불꽃"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>