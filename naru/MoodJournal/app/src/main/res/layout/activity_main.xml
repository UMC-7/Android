<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <!-- 선형 레이아웃 -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 제목 텍스트 뷰 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 하루는 어땠나요?"
            android:textSize="22sp" />

        <!-- 부제목 텍스트 뷰 -->
        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="감정 우표를 선택해주세요"
            android:textSize="16sp" />

        <!-- 설명 텍스트 뷰 -->
        <TextView
            android:id="@+id/tvDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="선택한 감정우표를 기반으로 맞춤형 질문이 배달됩니다"
            android:textSize="12sp" />

        <!-- 첫 번째 표정 이미지 뷰 -->
        <ImageView
            android:id="@+id/ivMoodHappy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:src="@drawable/face_1" />

        <!-- 첫 번째 표정 텍스트 뷰 -->
        <TextView
            android:id="@+id/tvMoodDescriptionHappy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="더없이 행복한 하루였어요"
            android:textSize="14sp" />

        <!-- 두 번째 표정 이미지 뷰 -->
        <ImageView
            android:id="@+id/ivMoodExcited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/face_2" />

        <!-- 두 번째 표정 텍스트 뷰 -->
        <TextView
            android:id="@+id/tvMoodDescriptionExcited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="들뜨고 흥분돼요"
            android:textSize="14sp" />


        <!-- 세 번째 표정 이미지 뷰 -->
        <ImageView
            android:id="@+id/ivMoodNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/face_3" />

        <!-- 세 번째 표정 텍스트 뷰 -->
        <TextView
            android:id="@+id/tvMoodDescriptionNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="평범한 하루였어요"
            android:textSize="14sp" />

        <!-- 네 번째 표정 이미지 뷰 -->
        <ImageView
            android:id="@+id/ivMoodAnxious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/face_4" />

        <!-- 네 번째 표정 텍스트 뷰 -->
        <TextView
            android:id="@+id/tvMoodDescriptionAnxious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="생각이 많아지고 불안해요"
            android:textSize="14sp" />

        <!-- 다섯 번째 표정 이미지 뷰 -->
        <ImageView
            android:id="@+id/ivMoodAngry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/face_5" />

        <!-- 다섯 번째 표정 텍스트 뷰 -->
        <TextView
            android:id="@+id/tvMoodDescriptionAngry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="부글부글 화가 나요"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- 프래그먼트를 로드할 뷰 -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 바텀 네비게이션 바 레이아웃 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemTextColor="@drawable/bottom_nav_color"
        app:itemIconTint="@drawable/bottom_nav_color" />

</androidx.constraintlayout.widget.ConstraintLayout>
