<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">


            <ImageView
            android:id="@+id/music_video_iv"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:src="@drawable/img_detail_video"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/music_video_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[MV] Let me go!"
            android:textSize="17sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/music_video_iv"
            app:layout_constraintTop_toBottomOf="@+id/music_video_iv" />

        <TextView
            android:id="@+id/music_video_introduction_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Volunteers (더 발룬티어스) | 2021.05.28"
            android:textSize="15sp"
            android:textColor="@color/gray_color"
            app:layout_constraintStart_toStartOf="@+id/music_video_iv"
            app:layout_constraintTop_toBottomOf="@+id/music_video_tv" />

        <TextView
            android:id="@+id/sorting_method_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:text="최신순"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/music_video_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/sorting_method_ib"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/nugu_btn_down"
            app:layout_constraintBottom_toTopOf="@+id/music_video_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>