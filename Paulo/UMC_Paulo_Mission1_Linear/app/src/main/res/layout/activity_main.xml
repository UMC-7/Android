<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">


    <ImageView
        android:layout_gravity="left"
        android:layout_width="8.06dp"
        android:layout_height="16dp"
        android:src="@drawable/vector"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 하루는 어땠나요?"
        android:fontFamily="@font/gangwoneduhyeonokt"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감정우표를 선택해주세요"
        android:fontFamily="@font/gangwoneduhyeonokt"
        android:textSize="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택한 감정우표를 기반으로 맞춤형 질문이 배달됩니다"
        android:fontFamily="@font/gangwoneduhyeonokt"
        android:textSize="8dp"
        android:layout_marginTop="40dp"/>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="44.13dp"
        android:src="@drawable/gy"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더없이 행복한 하루였어요"
        android:fontFamily="@font/gangwoneduhyeonokt"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="44.13dp"
        android:src="@drawable/gb"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="들뜨고 흥분돼요"
        android:fontFamily="@font/gangwoneduhyeonokt"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="44.13dp"
        android:src="@drawable/gp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평범한 하루였어요"
        android:fontFamily="@font/gangwoneduhyeonokt"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="44.13dp"
        android:src="@drawable/gg"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생각이 많아지고 불안해요"
        android:fontFamily="@font/gangwoneduhyeonokt"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="44.13dp"
        android:src="@drawable/gr"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부글부글 화가 나요"
        android:fontFamily="@font/gangwoneduhyeonokt"
        android:textSize="18dp"
        android:layout_marginTop="5dp"/>

</LinearLayout>
