<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/angry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부글부글 화가 나요"
            android:layout_margin="5.87dp"
            android:fontFamily="@font/gangwoneduhyeonokt"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewR" />

        <TextView
            android:id="@+id/ner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생각이 많아지고 불안해요"
            android:layout_margin="5.87dp"
            android:fontFamily="@font/gangwoneduhyeonokt"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewG" />

        <TextView
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평범한 하루였어요"
            android:layout_margin="5.87dp"
            android:fontFamily="@font/gangwoneduhyeonokt"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewP" />

        <TextView
            android:id="@+id/excited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="들뜨고 흥분돼요"
            android:layout_margin="5.87dp"
            android:fontFamily="@font/gangwoneduhyeonokt"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewB" />

        <TextView
            android:id="@+id/happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더없이 행복한 하루였어요"
            android:layout_margin="5.87dp"
            android:fontFamily="@font/gangwoneduhyeonokt"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewY" />

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 하루는 어땠나요?"
            android:layout_margin="90dp"
            android:fontFamily="@font/gangwoneduhyeonokt"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/imageViewY" />

        <TextView
            android:id="@+id/select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="감정우표를 선택해주세요"
            android:fontFamily="@font/gangwoneduhyeonokt"
            android:textSize="22dp"
            android:layout_margin="67dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/imageViewY" />

        <TextView
            android:id="@+id/deli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:fontFamily="@font/gangwoneduhyeonokt"
            android:text="선택한 감정우표를 기반으로 맞춤형 질문이 배달됩니다"
            android:textSize="8dp"
            app:layout_constraintBottom_toTopOf="@id/imageViewY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TextSizeCheck" />


        <ImageView
            android:id="@+id/imageViewR"
            android:layout_width="40dp"
            android:layout_height="44.13dp"
            android:src="@drawable/gr"
            android:layout_margin="45.87dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewG"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imageViewB"
            android:layout_width="40dp"
            android:layout_height="44.13dp"
            android:src="@drawable/gb"
            android:layout_margin="45.87dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imageViewG"
            android:layout_width="40dp"
            android:layout_height="44.13dp"
            android:src="@drawable/gg"
            android:layout_margin="45.87dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewP"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imageViewP"
            android:layout_width="40dp"
            android:layout_height="44.13dp"
            android:src="@drawable/gp"
            android:layout_margin="45.87dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imageViewY"
            android:layout_width="40dp"
            android:layout_height="44.13dp"
            android:src="@drawable/gy"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/vector"
            android:layout_width="8.06dp"
            android:layout_height="14.07dp"
            android:src="@drawable/vector"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>